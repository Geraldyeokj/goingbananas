<% layout("layouts/boilerplate") %>
<h1>All Your BananaTests</h1>

<%if (bananaDataPoints) {%>
    <div>
        <a href="/" class="btn btn-warning">Do another BananaTest</a>
    </div>
    <%for (let bananaDataPoint of bananaDataPoints) {%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=bananaDataPoint.image[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card title">This Banana was <%= bananaDataPoint.ripeness %></h5>
                        <p class="card-text">BananaTest Taken on: <%= Date(bananaDataPoint.date).toString(); %></p>
                        <!-- <p class="card-text">
                            <small class="text-muted">location</small>
                        </p>
                        <a class="btn btn-primary" href="/bananaspots/someid">View bananadatapoint</a> -->
                    </div>
                </div>
            </div>
        </div>
    <%}%>
<%} else {%>
    <div>
        <h2>You haven't done any BananaTests yet...</h2>
        <a href="/" class="btn btn-warning">Do one right now!</a>
    </div>
<%}%>